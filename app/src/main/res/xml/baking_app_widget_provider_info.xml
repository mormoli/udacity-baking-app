<?xml version="1.0" encoding="utf-8"?>
<!-- every 12 hours update widget update period millis -->
<!-- initialKeyguardLayout and widgetCategory requires min sdk 17 !-->
<appwidget-provider xmlns:android="http://schemas.android.com/apk/res/android"
    android:initialKeyguardLayout="@layout/baking_app_widget_provider"
    android:initialLayout="@layout/baking_app_widget_provider"
    android:minHeight="220dp"
    android:minWidth="180dp"
    android:previewImage="@drawable/example_appwidget_preview"
    android:resizeMode="horizontal|vertical"
    android:updatePeriodMillis="43200000"
    android:widgetCategory="home_screen">

</appwidget-provider>